<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Base.Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorSecondary">@color/textColor128</item>
        <item name="buttonStyle">@style/Button</item>
        <item name="imageButtonStyle">@style/ImageButton</item>
        <item name="android:alertDialogTheme">@style/DialogTheme</item>
        <item name="android:navigationBarColor">@color/navigationBarColor</item>
        <item name="android:listDivider">@null</item>
    </style>

    <style name="AppTheme.Light" parent="Base.Theme.AppCompat.Light">
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">@color/lightColorPrimary</item>
        <item name="colorPrimaryDark">@color/lightColorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/lightTextColor</item>
        <item name="android:textColorSecondary">@color/lightTextColor128</item>
        <item name="buttonStyle">@style/Button</item>
        <item name="imageButtonStyle">@style/ImageButton</item>
        <item name="android:alertDialogTheme">@style/DialogTheme</item>
        <item name="android:listDivider">@null</item>
    </style>

    <style name="AppTheme.NoActionbar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/navigationBarColor</item>
    </style>

    <style name="AppTheme.Splash" parent="AppTheme.NoActionbar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@null</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="AppTheme.ScreenOff" parent="AppTheme.NoActionbar">
        <item name="android:textColor">@color/textColor128</item>
    </style>

    <style name="Widget.Button" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/product_sans</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/windowBackground</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorPrimary">@color/textColor</item>
        <item name="android:textColorAlertDialogListItem">@color/textColor</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="CutoutHide">
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="28">never</item>
    </style>

    <style name="CutoutIgnore">
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="28">shortEdges</item>
    </style>
</resources>
